<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_method"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3b3b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kilo.cinemaprojectfinal.PaymentMethod">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="58dp" >

        <RadioButton
            android:text="Pay at Counter"
            android:textSize="18dp"
            android:textColor="@android:color/holo_orange_dark"
            android:buttonTint="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="Internet Banking"
            android:textSize="18dp"
            android:textColor="@android:color/holo_orange_dark"
            android:buttonTint="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:text="Master Card"
            android:textSize="18dp"
            android:textColor="@android:color/holo_orange_dark"
            android:buttonTint="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="Visa"
            android:textSize="18dp"
            android:textColor="@android:color/holo_orange_dark"
            android:buttonTint="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        android:text="Please Choose a Payment Method"
        android:textSize="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_marginTop="16dp"
        android:id="@+id/textView11" />

    <Button
        android:text="Pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:textColor="@android:color/holo_orange_dark"
        android:backgroundTint="@android:color/background_dark"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_marginTop="23dp"
        android:id="@+id/pay" />

</RelativeLayout>
